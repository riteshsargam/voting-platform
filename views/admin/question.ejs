<div class="flex items-center">
    <h5 class="text-2xl font-semibold">Questions in Election</h5>
    <span id="voter-count" class="bg-gray-300 ml-2 px-2 rounded text-sm">
      <%= questions.length %>
    </span>
  </div>

  <div class="overflow-x-auto relative">
    <table class="w-full text-sm text-left text-gray-500">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
            <tr>
                <th scope="col" class="py-3 px-6">
                    Question Title
                </th>
                <th scope="col" class="py-3 px-6">
                    Description
                </th>
                <th scope="col" class="py-3 px-6">
                    Options
                </th>
                <th scope="col" class="py-3 px-6">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
          <% questions.forEach(question => { %>
            <tr class="bg-white border-b">
              <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap">
                  <%= question.title %>
              </th>
              <td class="py-4 px-6">
                  <%= question.desc %>
              </td>
              <td class="py-4 px-6">
                  <%= question.options.length %>
              </td>
              <td class="py-4 px-6">
                  <a href="#" class="font-medium text-blue-600 hover:underline" onclick="deleteQuestion(<%= question.id %>)">Delete</a>
              </td>
          </tr>
          <% }) %>
        </tbody>
    </table>
</div>